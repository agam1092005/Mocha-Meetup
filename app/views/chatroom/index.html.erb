

<h4 class="ui center aligned medium icon header">
  <i class="inverted orange circular coffee icon"></i>
  Drink coffee and chat along
</h4>


        <div class="ui fluid raised card chatbox">
            <div class="content" id="messages">
                <div class="ui feed" id="message-container">
                    <%= render @messages %>
                </div>
            </div>
                <div class="extra content">
                <%= form_for(@message, html: {class: "ui reply form", role: "form"}, url: message_path, remote: true) do |txt| %>
                        <div class="field">
                            <div class="ui fluid icon input">
                            <%= txt.text_field :body %>
                            
                            </div>
                        </div>
                    <% end %>
                </div>

</div>
